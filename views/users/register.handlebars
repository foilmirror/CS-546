  <h2>Create an account</h2>
  <form action="/users" method="POST" class="new-user-form">

    <label>
      User Name
      <input type="text" name="userName" placeholder="username" value="{{user.userName}}" class="full-width-input"/>
    </label>
	<br>

    <label>
      Email
      <input type="text" name="Email" placeholder="example@gmail.com" value = "{{user.Email}}" class="full-width-input"/>
    </label>
	<br>

    <label>
      Profile Photo
