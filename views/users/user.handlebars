<!DOCTYPE html>
<html lang="en">

<link rel="stylesheet" href="../public/css/user.css">
<h1>{{user.userName}}'s Page</h1>
  <h2><img src="/public/images/{{ user.profilePhoto }}.jpg" class = "picture" alt="The User's Pitcure"></h2>
  <h2>Age: {{user.Age}}</h2>
  <h2>Gender: {{user.Gender}}</h2>
  <h2>Location: {{user.City}}, {{user.State}}</h2>
  <h2 class = "posts">Posts done by {{user.userName}}</h2>
  {{#each user.posts}}
    <li><a href="/posts/{{id}}">{{id}}</a></li>
     {{/each}}
    {{#if you}}
    <button><a href="/posts/new">Create a new post</a></button>
    {{/if}}
    <h2>Friends of {{user.userName}}</h2>
    {{#each user.friends}}
    <li><a href="/users/{{_id}}">{{userName}}</a></li>
     {{/each}}

  {{#if nyou}}
  <form action="/users/{{user._id}}?_method=PUT" method="post">
  <input type="hidden" name="_method" value="PUT">
  <input type="hidden" id="userName" name="userName" value= {{user.userName}} readonly><br><br>
  <input type="hidden" id="profilePhoto" class = "picture" name="profilePhoto" value= {{user.profilePhoto}} readonly><br><br>
  <input type="hidden" id="Email" name="Email" value= {{user.Email}} readonly><br><br>
  <input type="hidden" id="Gender" name="Gender" value= {{user.Gender}} readonly><br><br>
  <input type="hidden" id="City" name="City" value= {{user.City}} readonly><br><br>
  <input type="hidden" id="State" name="State" value= {{user.State}} readonly><br><br>
  <input type="hidden" id="Password" name="Password" value= {{user.Password}} readonly><br><br>
  <input type="hidden" id="Age" name="Age" value= {{user.Age}} readonly><br><br>
  <input type = "hidden" name = "friends" value = {{i._id}} readonly/>
  <button type="submit">Add</button>
  </form>
  {{/if}}

  {{#if friend}}
   <form action="/users/{{user._id}}?_method=DELETE" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <p> Click the button below to unfriend this person</p>
  <input type = "text" name = "userID" value = {{i._id}} readonly/>
  <button type="submit">Remove</button>
   {{/if}}

