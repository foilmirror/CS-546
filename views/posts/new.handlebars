<article class="new-post">
  <h1>Make a Post</h1>
  <br>
  <form action="/posts" method="POST" class="new-post-form">
    <label>
      Post Title
      <input type="text" name="title" placeholder="Post Title" value="{{post.title}}" class="full-width-input"/>
    </label>
    <br>
    <label for="post-body">
      Post Body
    </label>
    <textarea id="post-body" name="body" rows="4" placeholder="Post Content" class="full-width-input">{{post.body}}</textarea>
    <br>
    <label for="post-tag">
      Post Tag
    </label>
    <textarea id="post-tag" name="tag" rows="4" placeholder="Post Tag" class="full-width-input">{{post.tag}}</textarea>
    <br>

  <label>
      Post Image
      <select id = "post-image" name="image">
	<option style="background-image:url(/public/images/dog.jpg);" class = "postimage"> dog</option>
	<option style="background-image:url(/public/images/cat.jpg);" class = "postimage"> cat</option>
	<option style="background-image:url(publie/images/flower.jpg);" class = "postimage" >flower</option>
	</select> 
    </label>
	<br>
    {{!-- <label for="poster">
      Poster
    </label>
    <select class="full-width-input" name="posterId">
      <option value="">Select User...</option>
      {{#each users}}
        <option value="{{_id}}">{{userName}}</option>
      {{/each}}
    </select> --}}
    <br>    
    <button type="submit">Create New Post</button>

  </form>
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</article>